#include<stdio.h>
#include<conio.h>
void main()
{
clrscr();
int c=0;
intpos;
intsize,arr[20],i,s;
printf("\nEnter your array size:");
scanf("%d",&size);
printf("\nEnter array elements:");
for(i=0;i<size;++i)
{
scanf("%d",&arr[i]);
}
printf("\n Enter element to be searched for:");
scanf("%d",&s);
for(i=0;i<size;++i)
{
if(arr[i]==s)
{
pos=i+1;
c=1;
break;
}
}
if(c==1)
printf("\nElement found at %d",pos);
else
printf("\nElement not found!");
getch();
}
